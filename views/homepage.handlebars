{{#if posts.length}}
  <h2 class="ml-4 post-list-header">Posts from users you follow:</h2>
    <ul class="post-list">
      {{#each posts as |post|}}
      <li>
        {{> post-info post }}
      </li>
      {{/each}}
    </ul>
{{/if}}
{{!-- if not loggedIn, we loop through the prePosts array rather than the posts array. --}}
{{#if prePosts.length}}
  <h2 class="ml-4 post-list-header">Posts from users around the world!</h2>
  <h3 class="ml-4 post-list-header"><a href="/login">Log in to start following your favorite users!</a></h3>

    <ul class="post-list">
      {{#each prePosts as |post|}}
      <li>
        {{> post-info post }}
      </li>
      {{/each}}
    </ul>
{{/if}}




