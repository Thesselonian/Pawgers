<div class="comments">
    {{#each this}}
    <section class="comment">
        <div class="meta">
            <a href="/profile/{{user_id}}">{{user.username}}</a> on {{format_date created_at}}
        </div>
        <div class="text">
            {{comment_text}}
        </div>
    </section>
    {{/each}}
</div>